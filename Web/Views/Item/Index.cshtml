@using BloodSearch.Models.Api.Models.Offers.Requests;
@using BloodSearch.Models.Api.Models.Offers;

@model GetOfferResult

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BloodSearch.com</title>
    <link rel="stylesheet" href="/content/css/styles.css" type="text/css" media="screen, projection" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
</head>
<body>
    @Html.Partial("_Header", 0)
    <main>
        <div class="wrap">
            <div class="offer__card">
                <div>
                    <div class="offer__header">
                        @if (Model.Type == OfferTypeEnum.Donor) {
                            <h1 class="offer__title">Донор</h1>
                        } else {
                            <h1 class="offer__title">Реципиент</h1>
                        }
                    </div>

                    <div class="offer__address">
                        <p>Код региона: @Model.Offer.City</p>
                    </div>

                    <div class="offer__description">
                        <p>@Model.Offer.Category</p>
                        <p>@Model.Offer.Description</p>
                    </div>

                    <div class="offer__phone-box">
                        <div class="offer__phone-contact">
                            <p class="mb10">@Model.Offer.Name</p>
                            <span class="offer__phone-link print-bold">@Model.Offer.Contact</span>
                        </div>
                    </div>
                </div>

                <div>

                </div>

                <div class="map-box">
                    <span>Ближайший пункт сдачи крови</span>
                    <div class="map">
                        
                    </div>
                </div>
            </div>
        </div>
    </main>

    @Html.Partial("_Footer")

    <style>
        .map-box {
            border-top: 1px solid #808080;
            margin-top: 2rem;
            padding-top: 2rem;
        }

        .map {
            margin-top: 1rem;
            border: 1px solid #ff0000;
            height: 30rem;
        }
    </style>

    <script>
        $(function () {

        });
    </script>
</body>
</html>